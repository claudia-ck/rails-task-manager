<h2><%= @task.title %></h2>
<div><p><%= @task.completed %></p></div>

    <%= check_box_tag 'completed', '1', @task.completed, disabled: true %>
    <label for="completed"><%= @task.completed ? "This task is completed" : "This task is not completed yet" %></label>

<div><p><%= link_to "Back to list.", tasks_path %></p></div>
<button><%= link_to "edit this task", edit_task_path(@task) %></button>
